<article>
  <h1><a href="/keyword/<%= uri_escape(entry[:keyword]) %>"><%= entry[:keyword] %></a></h1>
  <div><%== entry[:html] %></div>
  <button class="js-add-star" data-keyword="<%= entry[:keyword] %>" data-user-name="<%= @user_name %>"><img src="/img/star.gif"></button>
  <span class="js-stars" data-keyword="<%= entry[:keyword] %>">
    <% entry[:stars].each do |star| %><img src="/img/star.gif" title="<%= star %>" alt="<%= star %>"><% end %>
  </span>
</article>
